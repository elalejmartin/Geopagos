{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ReverseProxy": {
    "Routes": {
      "authorization_route": {
        "ClusterId": "authorization_cluster",
        "Match": {
          "Path": "/api/authorization_route/{**catch-all}"
        }
      },
      "payment-processor_route": {
        "ClusterId": "payment-processor_cluster",
        "Match": {
          "Path": "/api/payment-processor_route/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "authorization_cluster": {
        "Destinations": {
          "destination0": {
            "Address": "http://authorization-service/"
          }
        }
      },
      "payment-processor_cluster": {
        "Destinations": {
          "destination0": {
            "Address": "http://payment-processor-service/"
          }
        }
      }
    }
  }


}
