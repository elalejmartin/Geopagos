    //"BaseUrl": "http://localhost:8001/",
    "UseServiceDiscovery": true,
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "services-consul",
      "Port": 8500,
      "Type": "Consul"
    }
  },
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/{service}/{everything}",
      "UpstreamPathTemplate": "/{service}/{everything}",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }
